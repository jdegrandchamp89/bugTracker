<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Lname</th>
      <th>Fname</th>
      <th>Email</th>
      <th>Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.lname %></td>
        <td><%= user.fname %></td>
        <td><%= user.email %></td>
        <td><%= user.thumbnail %></td>
        <td><%= link_to 'Show', user, :class => 'btn btn-sm' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-sm' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => 'btn' %>
<%= link_to 'Show Bugs', bugs_path, :class => 'btn' %>
